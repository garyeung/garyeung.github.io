
---
import { config } from '../../config';
import Icon from './Icon.astro';

const contact = config.site.contact
---
<ul class="flex flex-row gap-4 justify-center flex-wrap">
{contact.map((item) => {
    return (
    <li class="capitalize">
    <a class=`
    hidden
    md:block
    ${item.title}
    `
    href={(item.title=="email"?"mailto:":"https://") + item.href}>{item.title}</a>

    <a class=`
    md:hidden
    ${item.title}
    `
    href={(item.title=="email"?"mailto:":"https://") + item.href}>
        <Icon name={item.title}/>
    </a>

    </li>
)
})}
</ul>
